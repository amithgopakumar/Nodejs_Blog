
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% posts.forEach(post => { %>
                    <tr>
                        <td><%= post.title %></td>
                        <td><%= post.author ? post.author.name : 'Unknown' %></td>
                        <td><%= new Date(post.createdAt).toLocaleString() %></td>
                        <td>
                            <a href="/post/<%= post.slug %>" class="view-btn" target="_blank">View</a>
                            <a href="/post/edit/<%= post._id %>" class="edit-btn">Edit</a>
                            <a href="/post/delete/<%= post._id %>" class="delete-btn">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    